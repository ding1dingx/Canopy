root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,css,html}]
indent_size = 2

[*.{md,mdx,diff}]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
tab_width = 4
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
